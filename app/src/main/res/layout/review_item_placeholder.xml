<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@drawable/bg_placeholder_round_square"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:elevation="-1dp"
        android:alpha="0.85"
        android:layout_height="180dp" />

    <View
        android:id="@+id/v2"
        app:layout_constraintStart_toStartOf="@id/v1"
        app:layout_constraintEnd_toEndOf="@id/v1"
        app:layout_constraintTop_toTopOf="@id/v1"
        app:layout_constraintBottom_toBottomOf="@id/v1"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_placeholder_round_square"
        android:layout_width="100dp"
        android:layout_height="150dp"/>

    <LinearLayout
        app:layout_constraintStart_toEndOf="@id/v2"
        app:layout_constraintEnd_toEndOf="@id/v1"
        app:layout_constraintTop_toTopOf="@id/v2"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <include
            android:layout_width="match_parent"
            android:layout_height="20dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            layout="@layout/text_placeholder"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/v1"
        app:layout_constraintEnd_toEndOf="@id/v1"
        app:layout_constraintTop_toBottomOf="@id/v1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <include
            android:layout_width="200dp"
            android:layout_height="20dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="275dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="225dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            layout="@layout/text_placeholder"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>