<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        layout="@layout/detail_info_header_placeholder"/>

    <View
        android:id="@+id/v2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:elevation="-1dp"
        android:alpha="0.6"
        android:background="@drawable/bg_placeholder_top_round_square"
        android:layout_marginHorizontal="12dp"/>

    <View
        android:id="@+id/v3"
        app:layout_constraintStart_toStartOf="@id/v2"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintTop_toTopOf="@id/v2"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        android:layout_width="100dp"
        android:background="@drawable/bg_placeholder_square"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="20dp"
        android:layout_height="30dp"/>

    <View
        android:id="@+id/v4"
        app:layout_constraintStart_toStartOf="@id/v2"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintTop_toBottomOf="@id/v3"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        android:layout_width="0dp"
        android:background="@drawable/bg_placeholder_square"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginHorizontal="20dp"
        android:layout_height="20dp"/>

    <View
        android:id="@+id/v5"
        app:layout_constraintStart_toStartOf="@id/v2"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintTop_toBottomOf="@id/v4"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        android:layout_width="0dp"
        android:background="@drawable/bg_placeholder_square"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginHorizontal="20dp"
        android:layout_height="20dp"/>

    <View
        android:id="@+id/v6"
        app:layout_constraintStart_toStartOf="@id/v2"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintTop_toBottomOf="@id/v5"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        android:layout_width="0dp"
        android:background="@drawable/bg_placeholder_square"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginHorizontal="20dp"
        android:layout_height="20dp"/>

    <View
        android:id="@+id/v7"
        app:layout_constraintStart_toStartOf="@id/v2"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintTop_toBottomOf="@id/v6"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        android:layout_width="100dp"
        android:background="@drawable/bg_placeholder_square"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="20dp"
        android:layout_height="30dp"/>

    <View
        android:id="@+id/v8"
        app:layout_constraintStart_toStartOf="@id/v2"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintTop_toBottomOf="@id/v7"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        android:layout_width="200dp"
        android:background="@drawable/bg_placeholder_square"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginHorizontal="20dp"
        android:layout_height="0dp"/>

    <View
        android:id="@+id/v9"
        app:layout_constraintStart_toEndOf="@id/v8"
        app:layout_constraintEnd_toEndOf="@id/v2"
        app:layout_constraintTop_toTopOf="@id/v8"
        app:layout_constraintBottom_toBottomOf="@id/v8"
        android:layout_width="0dp"
        android:background="@drawable/bg_placeholder_square"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginHorizontal="20dp"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>